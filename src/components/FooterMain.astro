---

import logoDark from '../../public/logo-dark.png'
import logoWebdignetDark from '../../public/logo-webdignet-dark.png'
import Image from "astro/components/Image.astro"

const { settings } = Astro.props

---

<footer class="@container bs-container my-24 font-semibold text-bs-foreground-dark [&_a]:hover:text-bs-foreground-light [&_a]:transition-color [&_a]:duration-150" id="contact">

  <!-- Wrapper -->
  <div class="bg-bs-surface-2 p-6 md:p-16 rounded-xl grid md:grid-cols-3 gap-8">

      <!-- Left col -->
      <div class="w-max flex flex-col gap-8 md:gap-0 justify-between text-bs-foreground-light">

        <!-- Logo -->
        <a class="flex group" href="#top" aria-label="Back to top">

          <Image src={logoDark} alt="Webdignet Logo" class="group-hover:-rotate-360 group-hover:scale-80 transition-transform ease-bs-spring duration-1000" height="48" width="auto" />

          <Image src={logoWebdignetDark} alt="Webdignet Logo" class="ml-2 mt-3 h-[24px] w-auto" />
        </a>

        <!-- CTA title -->
        <h2 class="bs-h3">{ settings.demo.title  }</h2>

        <!-- CTA Button -->
        <a href="https://wa.me/6285213680367?text=Halo%20Webdignet,%20saya%20tertarik%20dengan%20layanan%20Anda"
           target="_blank"
           rel="noopener noreferrer"
           class="min-w-32 bs-btn block bg-bs-surface-3 text-center">

          { settings.demo.cta }

        </a>

      </div>

      <!-- Middle col - Alamat -->
      <div class="w-max flex flex-col gap-4 justify-center text-bs-foreground-light">

        <!-- Alamat Title -->
        <h3 class="font-semibold text-lg mb-2">Alamat</h3>

        <!-- Alamat Link -->
        <a href="https://maps.google.com/?q=Jalan+Matraman+Raya+no.+66+RT+010%2F002+Kel+Kebon+Manggis+Kec+Matraman+Jakarta+Timur"
           target="_blank"
           rel="noopener noreferrer"
           class="text-sm hover:text-bs-foreground-light transition-colors">
          Jalan Matraman Raya no. 66<br>
          RT 010/002, Kel Kebon Manggis<br>
          Kec Matraman, Jakarta Timur
        </a>

      </div>

      <!-- Right col -->
      <div class="flex gap-10 md:gap-2 lg:gap-20 md:justify-end [&_a]:block md:[&_a]:px-5 [&_a]:py-2">

        <!-- Nav -->
        <nav class="flex flex-col">

          { settings.nav.sort((a,b) => a.title.localeCompare(b.title)).map( item =>

            <a href={ item.link }>
              { item.title }
            </a>

          )}

        </nav>

        <!-- Social links -->
        <nav class="flex flex-col">

          { settings.social_links.sort((a,b) => a.title.localeCompare(b.title)).map( item =>

            <a href={ item.link }>
              { item.title }
            </a>

          )}

        </nav>

      </div>

  </div>


  <!-- Colophon -->
  <aside class="bs-container">

      <nav class="flex gap-4 justify-center pt-16 md:pt-24 text-xs">

        <!-- Hak Cipta/Tanggal -->
        <a href="https://webdignet.com/">Â© 2024 Webdignet</a>

        <!-- WhatsApp Contact -->
        <a href="https://wa.me/6285213680367">WhatsApp: +6285213680367</a>

      </nav>

  </aside>

</footer>

